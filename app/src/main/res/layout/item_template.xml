<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemTemplateId"
    app:cardElevation="50dp"
    app:cardCornerRadius="10dp"

    android:layout_margin="10dp"


    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#79B6E7"
        android:layout_height="match_parent"

        >


        <TextView
            android:id="@+id/goalNoteTitleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonId"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"

            tools:text="Jishan" />

        <TextView
            android:id="@+id/timeStampId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/goalNoteTitleId"
            app:layout_constraintHorizontal_bias="0.0"
            android:textSize="12sp"



            app:layout_constraintStart_toStartOf="@+id/goalNoteTitleId"
            app:layout_constraintTop_toBottomOf="@id/goalNoteTitleId"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="10dp"
            tools:text="Updated at" />

        <ImageButton
            android:id="@+id/imageButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="#79B6E7"

            android:src="@drawable/ic_baseline_cancel_24"


            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>